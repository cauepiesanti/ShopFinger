<MainMenuScreen>:
    FloatLayout:
        id: main_layout

        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, 0.8
            pos_hint: {'top': 0.9}

            # TABELA
            FloatLayout:
                size_hint: 1, 0.25

                BoxLayout:
                    orientation: 'horizontal'
                    size_hint: 1, 1
                    height: self.minimum_height
                    pos_hint: {'x': 0, 'y': 0}

                    TextInput:
                        readonly: True
                        multiline: False
                        text: 'Produto'
                        font_size: 30
                        #size_hint: 0.22, .33
                        pos_hint: {'center_x':0 , 'center_y':0.5}

                    TextInput:
                        readonly: True
                        multiline: False
                        text: 'Preço unitário'
                        font_size: 30
                        #size_hint: 0.22, .33
                        pos_hint: {'center_x':0 , 'center_y':0.5}
                    

                    TextInput:
                        readonly: True
                        multiline: False
                        text: 'Quantidade'
                        font_size: 30
                        size_hint: 0.9, 1
                        pos_hint: {'center_x':0 , 'center_y':0.5}

                        
                    TextInput:
                        readonly: True
                        multiline: False
                        text: 'Preço total'
                        font_size: 30
                        #size_hint: 0.22, .33
                        pos_hint: {'center_x':1 , 'center_y':0.5}

