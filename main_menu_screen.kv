                background_color: 0, 0, 0, 0
                text: 'Ajuda'
                font_size: 30
                size_hint: .1, 1
                on_press: root.change_screen('helpBuy')

            Button:
                id: balance_button
                background_normal: 'images/saldo.png'
                background_color: 0, 0, 0, 0
                text: 'Saldo: $0.00'#f'Saldo: ${root.current_user_balance:.2f}'
                font_size: 30
                size_hint: .1, 1
                pos_hint: {'center_x': 0.5}
