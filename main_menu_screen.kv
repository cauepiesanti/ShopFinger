                background_color: 0, 0, 0, 0
                text: 'Carrinho'
                font_size: 30
                size_hint: .1, 1
                pos_hint: {'left': 0.6}
                on_press: root.change_screen('shopping_cart')

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.1
            pos_hint: {'top': 1}

            Button:
