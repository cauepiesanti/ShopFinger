# KV file (register_biometry_screen.kv)
<RegisterBiometryScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10

        Label:
            id: status_label
            text: "Aguardando..."
            font_size: 45
            size_hint: 1,.45
            height: self.texture_size[1] + 20

        Button:
            text: "Registrar Biometria"
            font_size: 30
            size_hint: 1,.35
            height: 50
            on_press: root.register_fingerprint()
        
        Button:
            text: "Voltar"
            font_size: 30
            size_hint: 1,.35
            height: 50
            on_press: root.change_screen('login')
